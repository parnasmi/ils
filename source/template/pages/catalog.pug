	//- include ../blocks/first
	+b.cat-mmenu
		+e.inner
			+e.button(href="#")
				+e.icon
					svg(class="icon",width="16",height="12")
						use(xlink:href='#icon-catalog')
				+e.text Каталог товаров
			+e.nav
	+b.breadcrumbs
		+e.inner 
			+e.UL.list
				+e.item: +e.link(href="#") Главная
				+e.item: +e.link(href="#") Ремонт Iphone
				+e.item: +e.link(href="#") iPhone X
	.catalog-banner
		+b.cat-banner
			+e.text_left
				+e.accented-text Аксессуары для техники Apple
				+e.muted-text по лучшой цене
			+e.logo
				img(src="./assets/img/Apple_logo_black.svg", alt)
			+e.text_right
				+e.accented-text Аксессуары для техники Apple
				+e.muted-text по лучшой цене
	+b.SECTION.catalog
		+e.inner
			+e.header_catalog-page
				+e.title_catalog-page.sec-title_xl Кожанные чехлы для iPhone 6S
				+e.filter
