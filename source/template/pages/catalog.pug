							+e.filter-selected-text Рекомендуемые
							+e.filter-selected-icon
								svg(class="icon",width="7",height="4")
									use(xlink:href='#arrow-up-down')
						+e.UL.sublist
							+e.subitem.active Рекомендуемые
							+e.subitem Сначала дешевая
							+e.subitem Сначала дорогая
							+e.subitem Новинки
			+e.UL.items-list_catalog-page
				+e.item_menu._catalog-page
